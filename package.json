{
  "name": "my-app",
  "version": "1.0.0",
  "description": "A simple TODO app using Express.js and Sequelize",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --detectOpenHandles --watch",
    "test:coverage": "jest --detectOpenHandles --coverage --coverageReporters=text-lcov | coveralls"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "sequelize": "^6.6.5"
  },
  "devDependencies": {
    "coveralls": "^3.3.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/your-username/my-app.git"
  },
  "author": "Your Name",
  "license": "MIT"
}
